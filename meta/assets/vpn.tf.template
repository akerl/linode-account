output "${name}-algo-address" {
  value = "$${module.${name}-algo.ip_address}"
}

module "${name}-algo" {
  source   = "armorfret/algo/linode"
  version  = "0.0.1"
  name     = "${name}"
  ssh_keys = ["$${data.external.ssh_key.result.public_key}"]
  region   = "${region}"
  image_id = "$${module.image.image_id}"
  users    = [${userlist}]
  type     = "g6-standard-1"
}
