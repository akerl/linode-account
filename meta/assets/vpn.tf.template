output "${name}-vpn-address" {
  value = "$${module.${name}-vpn.ip_address}"
}

module "${name}-vpn" {
  source   = "armorfret/wireguard/linode"
  version  = "0.0.3"
  name     = "${name}"
  ssh_keys = ["$${data.external.ssh_key.result.public_key}"]
  region   = "${region}"
  image_id = "$${module.image.image_id}"
  users    = [${userlist}]
  type     = "g6-standard-1"
}
